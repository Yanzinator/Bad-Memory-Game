        <Button Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="191" Width="179" Click="Button_Click" Grid.ColumnSpan="2" Tag="-1"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="78,10,0,0" VerticalAlignment="Top" Height="191" Width="179" Click="Button_Click" Grid.Column="1" Tag="-1"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="262,10,0,0" VerticalAlignment="Top" Height="191" Width="179" Click="Button_Click" Grid.Column="1" Tag="-1"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="446,10,0,0" VerticalAlignment="Top" Height="191" Width="179" Click="Button_Click" Grid.Column="1" Tag="-1"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,206,0,0" VerticalAlignment="Top" Height="191" Width="179" Click="Button_Click" Grid.ColumnSpan="2" Tag="-1"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="78,206,0,0" VerticalAlignment="Top" Height="191" Width="179" Click="Button_Click" Grid.Column="1" Tag="-1"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="262,206,0,0" VerticalAlignment="Top" Height="191" Width="179" Click="Button_Click" Grid.Column="1" Tag="-1"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="446,206,0,0" VerticalAlignment="Top" Height="191" Width="179" Click="Button_Click" Grid.Column="1" Tag="-1"/>

    </Grid>
</Window>
